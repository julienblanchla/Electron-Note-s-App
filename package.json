{
  "name": "notes-app-electron",
  "version": "1.0.0",
  "description": "A notes application built with Electron and React",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"vite --port 3000\" \"cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "electron:build": "electron-builder",
    "package": "npm run build && npm run electron:build"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-split": "^2.0.14",
    "showdown": "^2.1.0",
    "sqlite": "^4.2.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.4",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "vite": "^4.4.9"
  },
  "build": {
    "appId": "com.notes.app",
    "productName": "Notes App",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "notes.db"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
